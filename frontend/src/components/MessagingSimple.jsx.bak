  }, [location.state]);

  useEffect(() => {
    if (currentConversation) {
      fetchMessages(currentConversation.id);
      // Poll for new messages every 3 seconds
      const interval = setInterval(() => fetchMessages(currentConversation.id), 3000);
      return () => clearInterval(interval);

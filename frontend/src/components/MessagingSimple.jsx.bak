  const fetchUsers = async () => {
    try {
      console.log('ğŸ“ CALLING profileAPI.getAllProfiles...');
      console.log('API base URL:', 'https://192.168.100.57:5098/api');
      
      // Merr followers dhe following
      const [followersRes, followingRes] = await Promise.all([
